<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#D3D3D3"
    android:padding="120dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/numeroOrdem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:gravity="left"
        android:text="Número da Ordem: " />

    <TextView
        android:id="@+id/dataOrdem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="left"
        android:text="Data da Ordem: " />

    <TextView
        android:id="@+id/valorOrdem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="left"
        android:text="Valor da Ordem: " />

    <TextView
        android:id="@+id/statusOrdem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="left"
        android:text="Status da Ordem: " />

    <TextView
        android:id="@+id/nomeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="left"
        android:text="Nome do Usuário: " />

    <TextView
        android:id="@+id/observacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="left"
        android:text="Observação: " />

</LinearLayout>
